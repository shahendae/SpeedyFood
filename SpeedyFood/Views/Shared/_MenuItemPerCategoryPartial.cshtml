@model IEnumerable<MenuItem>

@if(Model.Count() > 0)
{
    <div class="col-12 post menu-resturant @Model.FirstOrDefault().Category.Name.Replace(" ", String.Empty)">
        <div class="row">
            <h3 class="text-success">@Model.FirstOrDefault().Category.Name</h3>
        </div>
        @foreach(var item in Model)
        {
            <div class="border border-info rounded col-12 borderPadding">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" class="menuItemImg" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary textLabelName">@item.Name</label>
                            </div>
                            <div class="col-4 text-right">
                                <h4 style="color:maroon">@item.Price EGP</h4>
                            </div>
                        </div>
                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@item.Description</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a class="btn btn-success form-control" asp-action="Details"
                               asp-route-Id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="p-4"></div>
    </div>
}
